{
  "name": "PyPSA Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.10",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    }
  },

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y glpk-utils libglpk-dev && pip install -r requirements.txt",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python"
      ]
    }
  }
}
